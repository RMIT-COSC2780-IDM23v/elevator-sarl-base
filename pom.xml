<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<groupId>rmit.agtgrp.sarl</groupId>
	<artifactId>sarl-elevatorsim-base</artifactId>
	<version>1.1.${env.SARL_VERSION}</version>


    <name>SARL Elevator Controller Base Framework</name>
    <description>This is a base template to build SARL controllers for the Elevator Simulator. It includes the connectivity to the simulator via the SARL Elevator Simulator Middleware and the SWI-Prolog Capacity/Skill.</description>


    <properties>
        <!-- SARL framework version and configuration -->
        <sarl.version>${env.SARL_VERSION}</sarl.version>

        <!-- Janus project version -->
        <janus.version>2.${sarl.version}</janus.version>

        <!-- JSON version -->
        <json.version>20160810</json.version>

        <!-- Java compiler version to be used -->
        <compiler.level>1.8</compiler.level>
        <project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>

        <!-- SARL Elevator Controller framework version -->
        <sarl-elevatorsim-mw.version>1.1.${sarl.version}</sarl-elevatorsim-mw.version>
        
        <!-- Mochalog framework version -->
        <mochalog.version>ffe16e8</mochalog.version>
        <!-- <mochalog.version>f03a9d1</mochalog.version> -->

        <!-- SARL Prolog KB Capability version -->
        <sarl-prolog-cap.version>1.1.${sarl.version}</sarl-prolog-cap.version>

    </properties>
    

    <dependencies>
        <!-- Janus Project kernel (contains SARL language core) -->
        <dependency>
            <groupId>io.janusproject</groupId>
            <artifactId>io.janusproject.kernel</artifactId>
            <version>${janus.version}</version>
        </dependency>

        <!--  JSON framework -->
        <dependency>
            <groupId>org.json</groupId>
            <artifactId>json</artifactId>
            <version>${json.version}</version>
        </dependency>

        <!--  SARL Elevator Control framework -->
		<dependency>
		    <groupId>org.bitbucket.ssardina-research</groupId>
		    <artifactId>sarl-elevatorsim-mw</artifactId>
	    	<version>${sarl-elevatorsim-mw.version}</version>
		</dependency>

        <!--  SARL Prolog KB Capability -->
        <dependency>
            <groupId>org.bitbucket.ssardina-research</groupId>
            <artifactId>sarl-prolog-cap</artifactId>
            <version>${sarl-prolog-cap.version}</version>
        </dependency>


        <!--  Mochalog interface for SWI-Prolog -->
        <dependency>
            <groupId>com.github.ssardina</groupId>
            <artifactId>mochalog</artifactId>
            <version>${mochalog.version}</version>
        </dependency>



        
		<!-- https://mvnrepository.com/artifact/org.apache.commons/commons-lang3 -->
		<dependency>
		    <groupId>org.apache.commons</groupId>
		    <artifactId>commons-lang3</artifactId>
		    <version>3.7</version>
		</dependency>
        
        
        
    </dependencies>



	<repositories>
        <!-- Janus Project kernel (contains SARL language core) -->
	  <repository>
	    <id>io.sarl-maven</id>
	    <name>SARL Snapshots</name>
	    <url>http://maven.sarl.io/</url>
	  </repository>
	  
        <!-- JitPack used for remote installation of dependencies from Github and Bitbucket -->
	    <repository>
	        <id>jitpack.io</id>
	        <name>JitPack Repository</name>
	        <url>https://jitpack.io</url>
	    </repository>

	</repositories>
	
	
	<pluginRepositories>
	  <pluginRepository>
	    <id>io.sarl-maven</id>
	    <name>SARL Snapshots</name>
	    <url>http://maven.sarl.io/</url>
	    <snapshots>
	      <enabled>true</enabled>
	    </snapshots>
	  </pluginRepository>
	</pluginRepositories>


    <!-- Build pipeline plugins -->
    <build>
        <plugins>
            <plugin>
                <groupId>io.sarl.maven</groupId>
                <artifactId>sarl-maven-plugin</artifactId>
                <version>${sarl.version}</version>
                <extensions>true</extensions>
                <configuration>
                    <source>${compiler.level}</source>
                    <target>${compiler.level}</target>
                    <encoding>${project.build.sourceEncoding}</encoding>
                </configuration>
            </plugin>
        
		    <plugin>
		    <artifactId>maven-assembly-plugin</artifactId>
		    <configuration>
		        <archive>
		            <manifest>
		                <addClasspath>true</addClasspath>
		                <!--
		                <mainClass>io.janusproject.Boot</mainClass>
		                -->
		                <mainClass>BootMAS</mainClass>
		            </manifest>
		        </archive>
		        <descriptorRefs>
		            <descriptorRef>jar-with-dependencies</descriptorRef>
		        </descriptorRefs>
		    </configuration>
		    <executions>
		        <execution>
		            <id>make-my-jar-with-dependencies</id>
		            <phase>package</phase>
		            <goals>
		                <goal>single</goal>
		            </goals>
		        </execution>
		    </executions>
		    </plugin>


            <plugin>
                <groupId>org.codehaus.mojo</groupId>
                <artifactId>exec-maven-plugin</artifactId>
                <configuration>
                    <mainClass>io.janusproject.Boot</mainClass>
                </configuration>
            </plugin>


		</plugins>
        
    </build>
</project>
